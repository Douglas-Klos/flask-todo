{% extends 'base.jinja2' %}

{% block subtitle %}All the things{% endblock subtitle %}

{% block content %}
<ul>
    {% for task in tasks %}
    <li>
        {{ task.name }}
        {% if not task.performed %}
            Not complete
        {% else %}
            Completed on {{ task.performed }}
            by {{ task.performed_by.name }}
        {% endif %}
    </li>
    {% endfor %}
</ul>
{% endblock content %}